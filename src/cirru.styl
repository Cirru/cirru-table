
::-webkit-scrollbar
  width 4px
  height 4px

::-webkit-scrollbar-track
  width 4px
  background hsl(0,90,95)

::-webkit-scrollbar-thumb
  background hsl(0,50,80)
  border-radius 2px

.cirru-editor-border
  background hsl(240, 80, 80)
  position relative
  
  *
    box-sizing border-box
  
  input
    width 1px
    border none
    outline none
    background hsla(0, 0, 0, 0)
    opacity 0
    position absolute
    top 0px

.cirru-editor
  margin 100px 10px 300px
  font-size 15px

  code
    display inline-block
    font-family Monaco, monospace
    max-width 200px
    overflow-x auto
    padding 0px 4px
    white-space nowrap
    position relative
    color hsla(0,0,80,1)

    .space
      background hsla(0,0,90,0.2)

    .selection
      background hsla(0,0,100,0.5)
      display inline-block
      min-width 2px
      min-height 10px

      &:empty
        margin 0px -1px
  pre
    box-shadow -1px 0px 0px hsla(0,0,80,0.4)
    margin 6px 0px 4px 16px

    code
      color hsla(0,0,100,1)

    &:hover
      box-shadow -2px 0px 0px hsla(0,0,90,0.6)